<h1>Products:</h1>

<%= form_tag '/products', method: :post do %>
    <%= label_tag 'product', 'Name'%>
    <%= text_field_tag 'product'%>

    <%= submit_tag 'add to cart'%>
<% end %>

<h2>Your Cart:</h2>

<% if cart.nil? %>
    <p>"Your cart is empty."<p>
<% else %>
    <ul>
        <% cart.each do |f| %>
            <li> <%= f %> </li>
        <% end %>
    </ul>
<% end %>